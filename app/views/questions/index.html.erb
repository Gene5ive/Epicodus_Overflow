<h1>All questions</h1>

<% if @questions.any? %>
  <% @questions.each do |question| %>
    <h4><%= link_to question.question_title, question_path(question) %></h4>
    <h4><%= question.question_body %></h4>
    <h4><%= question.question_author %><h4>
  <% end %>
<% else %>
  <p>There are no questions yet.</p>
<% end %>

<p><%= link_to "Add a question", new_question_path %></p>
